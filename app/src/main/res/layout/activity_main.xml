<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Main_Layout_Background"
    tools:context=".news.newsfeed.MainActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/Articles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="380dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_title"
        android:layout_width="159dp"
        android:layout_height="44dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="67dp"
        android:fontFamily="@font/new_rocker"
        android:text="@string/Logo"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/searchbar"
        android:layout_width="307dp"
        android:layout_height="30dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="134dp"
        android:text="@string/Search_Bar"
        android:textAlignment="viewStart"
        android:textColor="@color/Search_Bar_Text_Color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/rectangle"
        android:drawableEnd="@drawable/ic_filter_01"/>

    <Button
        android:id="@+id/bookmark_1"
        android:layout_width="38dp"
        android:layout_height="37dp"
        android:layout_marginStart="340dp"
        android:layout_marginTop="57dp"
        android:background="@color/Button_Color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:drawableTop="@drawable/ic_layer_26"
        android:clickable="true"/>

</androidx.constraintlayout.widget.ConstraintLayout>

