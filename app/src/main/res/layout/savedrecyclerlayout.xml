<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="50dp"
    android:layout_marginBottom="20dp"
    android:background="@color/Main_Layout_Background">

    <TextView
        android:id="@+id/savedTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="120dp"
        android:layout_marginTop="72dp"
        android:clickable="true"
        android:fontFamily="@font/quando"
        android:textAlignment="viewStart"
        android:textColor="@color/News_Title_TextColor"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/savedArticle_image"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/savedAuthor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="250dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/quando"
        android:textAlignment="viewStart"
        android:textColor="@color/News_Author_TextColor"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/savedPub_Date"
        app:layout_constraintTop_toBottomOf="@+id/savedTitle" />

    <TextView
        android:id="@+id/savedPub_Date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/source_sans_pro"
        android:textAlignment="viewStart"
        android:textColor="@color/News_PubDate_TextColor"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/savedTitle" />

    <ImageView
        android:id="@+id/savedArticle_image"
        android:layout_width="105dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
