<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/SavedActivity_Background"
    tools:context=".news.newssavedarticle.SavedArticleActivity">

    <TextView
        android:id="@+id/SavedTextView_title"
        android:layout_width="159dp"
        android:layout_height="44dp"
        android:layout_marginTop="35dp"
        android:fontFamily="@font/source_sans_pro_semibold"
        android:text="@string/saved_Layout_Title"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/Button_Color"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/savedback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="34dp"
        android:layout_marginTop="35dp"
        android:clickable="true"
        android:src="@drawable/ic_back_arrow_black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/savedSearchbar"
        android:layout_width="307dp"
        android:layout_height="30dp"
        android:layout_marginStart="34dp"
        android:layout_marginTop="38dp"
        android:background="@drawable/rectangle"
        android:drawableRight="@drawable/ic_filter_01"
        android:text="@string/Search_Bar"
        android:textAlignment="viewStart"
        android:textColor="@color/Search_Bar_Text_Color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SavedTextView_title" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/savedArticles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="350dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>